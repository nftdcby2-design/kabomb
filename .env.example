# Pirate Bomb Backend Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_PATH=./player_data.db
DATABASE_POOL_SIZE=10

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-here
ENCRYPTION_KEY=your-32-character-encryption-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_AUTH_MAX=10

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=./logs

# Cache Configuration
CACHE_TTL_PLAYERS=300
CACHE_TTL_LEADERBOARDS=600
CACHE_TTL_STATISTICS=900

# CORS Configuration (comma-separated URLs)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,https://devkaboom.onrender.com

# Blockchain Configuration
SOLANA_NETWORK=devnet
SOLANA_RPC_URL=https://api.devnet.solana.com

# Monitoring & Analytics
ENABLE_METRICS=true
ENABLE_PERFORMANCE_MONITORING=true

# External Services
WEBHOOK_URL=
NOTIFICATION_SERVICE_URL=

# Production Overrides (set these in production)
# NODE_ENV=production
# DATABASE_PATH=/data/player_data.db
# LOG_LEVEL=warn